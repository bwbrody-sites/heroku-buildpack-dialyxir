#!/bin/bash

echo $MIX_ENV
mkdir -p "$1"/priv/plts
mkdir -p "$2"/plts

# the -f test supresses warnings when cache is empty
[ -f "$2"/plts/dialyzer.plt ] && echo "Resoring cache..." && cp "$2"/plts/* "$1"/priv/plts || echo "Cache empty"

echo "Updating plts"
cd "$1"
mix dialyzer --plt

echo "Caching plts..."
cp "$1"/priv/plts/* "$2"/plts
